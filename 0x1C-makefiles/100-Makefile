NAME = school

SRC = $(wildcard *.c)

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $@

clean:
	@$(RM) *~ $(NAME)
	@echo "Cleaning..."

oclean:
	@$(RM) $(OBJ)
	@echo "Deleting object files..."

fclean: clean oclean
	@echo "Fully cleaning..."

re: fclean all
	@echo "Recompiling..."

$(OBJ): $(SRC)
	@$(CC) $(CFLAGS) -c $< -o $@
