NAME = school

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $@
	@echo "Linking $@..."

clean:
	@$(RM) *~ $(NAME) $(OBJ)
	@echo "Cleaning..."

oclean:
	@$(RM) $(OBJ)
	@echo "Deleting object files..."

fclean: clean oclean
	@echo "Fully cleaning..."

re: fclean all
	@echo "Recompiling..."

$(OBJ): $(SRC)
	@$(CC) $(CFLAGS) -c $^ -o $@

.PHONY: all clean oclean fclean re
